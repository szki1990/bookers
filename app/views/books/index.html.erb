<h1>Books</h1>

<h3>New book</h3>
<%= form_with model: @new_book, url: book_path ,method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>


<% @lists.each do |book| %>
  <p>Title</p>
  <span>
    <%= link_to book.title, book_path(book.id) %>
  </span>
<% end %>
