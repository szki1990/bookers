<body>
  <h1>Books</h1>

  <table class="is_border">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </td>
      </tr>
    </tbody>
    <% end %>
   </table>  
  <div>
    
  </div>
          
  
  <h3>New book</h3>
    <% if @book.errors.any? %>
    <div class=errors-count>
     <h2><%= @book.errors.count %>errors prohibited this book frombeing saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>
  
  <%= form_with model: @book, url: books_path, method: :post do |f| %>
    <h4 class="<%= 'error-title' if @book.errors[:title].any? %>">Title</h4>
    <%= f.text_field :title, class: @book.errors[:title].any? ? 'error' : nil %>
    
    <h4 class="<%= 'error-title' if @book.errors[:body].any? %>">Body</h4>
    <%= f.text_area :body, class: @book.errors[:body].any? ? 'error' : nil %>
    
    <div>
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</body>
