<h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <div class=errors-count>
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  </div>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title, class: @book.errors[:title].any? ? 'error' : nil %>
    
    <h4>Body</h4>
    <%= f.text_area :body, class: @book.errors[:body].any? ? 'error' : nil %>
    
    <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>
